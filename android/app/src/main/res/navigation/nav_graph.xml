<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_games">

    <fragment
        android:id="@+id/nav_games"
        android:name="com.example.android.ui.GamesFragment"
        android:label="Игры"
        tools:layout="@layout/fragment_games" />

    <fragment
        android:id="@+id/nav_characters"
        android:name="com.example.android.ui.CharactersFragment"
        android:label="Персонажи"
        tools:layout="@layout/fragment_characters">

        <action
            android:id="@+id/action_nav_characters_to_editor"
            app:destination="@id/fragment_editor" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.android.ui.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/fragment_editor"
        android:name="com.example.android.ui.CharacterEditorFragment"
        android:label="Редактор персонажа"
        tools:layout="@layout/fragment_character_editor"/>
</navigation>